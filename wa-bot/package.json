{
  "name": "wa-bot",
  "version": "1.0.0",
  "description": "WhatsApp bot for Ahmari Bookstore",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "qr:dev": "ts-node scripts/qr-dev.ts",
    "pair": "npm run build && node dist/pairing.js",
    "list:groups": "npm run build && node dist/listGroups.js",
    "test": "jest",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "baileys"
  ],
  "license": "MIT",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.6.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^9.2.0",
    "dotenv": "^16.3.1",
    "pino": "^8.17.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@hapi/boom": "^10.0.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/qrcode-terminal": "^0.12.2",
    "jest": "^29.7.0",
    "jest-json-reporter": "^1.2.2",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  }
}
